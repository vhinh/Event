<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cach1Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:gravity="center"
                android:background="@color/green"
                android:text="@string/tieude"
                android:textColor="@color/white"
                android:textSize="@dimen/large_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/So_a"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/a"
                    android:textSize="@dimen/large_size"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_soa"
                    android:inputType="numberSigned"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/So_b"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/b"
                    android:textSize="@dimen/large_size"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/edt_sob"
                    android:inputType="numberSigned"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/edt_ketqua"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:textSize="@dimen/large_size"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@color/green"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_tong"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:onClick="btnTong"
                android:text="@string/tong"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_hieu"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:text="@string/hieu"
                android:onClick="btnHieu"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_clean"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:text="@string/clean"
                android:onClick="btnClean"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>